{% extends "base.html.twig" %}

{% block body %}
{% include "navbar.html.twig" %}

<div class="row m-5">
    <div class="col-md-12">

        <div class="bigFormCreation">

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, { 'attr': { 'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { 'attr': { 'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.dateStart) }}
                {{ form_widget(form.dateStart, { 'attr': { 'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.dateEnd) }}
                {{ form_widget(form.dateEnd, { 'attr': { 'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.question) }}
                {{ form_widget(form.question, { 'attr': { 'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.answer) }}
                {{ form_widget(form.answer, { 'attr': { 'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Cr√©er Sondage</button>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
